import java.util.ArrayList;

public class Boba {

    //parameters
    private String name;
    private boolean vegan;
    private double medianPrice;
    private double distance;
    private double rating;
    private boolean milkFree;
    private boolean noCaffeine;
    private boolean hot;
    private int calories;

    public Boba(String name, boolean vegan, double medianPrice, double distance, double rating, boolean milkFree, boolean noCaffeine, boolean hot, int calories) {
        this.name = name;
        this.vegan = vegan;
        this.medianPrice = medianPrice;
        this.distance = distance;
        this.rating = rating;
        this.milkFree = milkFree;
        this.noCaffeine = noCaffeine;
        this.hot = hot;
        this.calories = calories;
    }

    public boolean getVegan() {
        return vegan;
    }

    public double getMedianPrice() {
        return medianPrice;
    }

    public double getDistance() {
        return distance;
    }

    public double getRating() {
        return rating;
    }

    public boolean getMilkFree() {
        return milkFree;
    }

    public boolean noCaffeine() {
        return noCaffeine;
    }

    public boolean getHot() {
        return hot;
    }

    public double getCalories() {
        return calories;
    }

    @Override
    public String toString() {
        return name;
    }


}
